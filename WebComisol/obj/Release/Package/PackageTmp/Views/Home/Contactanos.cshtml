
@{
    ViewBag.Title = "Contactanos";
}@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="container pb-5">
    <div class="m-5">
        <h2 class="pb-5  tv text-center">ESTAMOS A TUS ÓRDENES</h2>
        <form>
            <!-- 2 column grid layout with text inputs for the first and last names -->
            <div class="row mb-4 pt-3">
                <div class="col">
                    <div data-mdb-input-init class="form-outline">
                        <input type="text" id="form3Example1" class="form-control" />
                        <label class="form-label" for="form3Example1">Nombre</label>
                    </div>
                </div>
                <div class="col">
                    <div data-mdb-input-init class="form-outline">
                        <input type="tel" id="form3Example2" class="form-control" />
                        <label class="form-label" for="form3Example2">Telefono</label>
                    </div>
                </div>
            </div>

            <!-- Email input -->
            <div class="row mb-4">
                <div class="col">
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="email" id="form3Example3" class="form-control" />
                        <label class="form-label" for="form3Example3">Correo</label>
                    </div>
                </div>
                <div class="col">
                </div>
            </div>
            <!-- Message input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <textarea class="form-control" id="form4Example3" rows="4"></textarea>
                <label class="form-label" for="form4Example3">Mensaje</label>
            </div>

            <!-- Submit button -->
            <div class="row pt-5">
                <div class="col-md-4"></div>             
                <div class="col-md-7">
                    <div class="row">
                        <div class="col-md-5 ">
                            <h2 type="button" class=" tv btn-block mb-4">CONTÁCTANOS </h2>
                        </div>
                        <div class="col-md-1"><span class="pulse"></span></div>

                    </div>
                </div>
            </div>


        </form>
    </div>
    
</div>
